    <script>
        const center = document.getElementById('love-center');
        const overlay = document.getElementById('flash-overlay');
        const msgBox = document.getElementById('message-box');
        const suaigeCount = 5;
        const suaigePhrases = [
            "è€å­æ˜¯ä»–çˆ¹ï¼", // çˆ¸çˆ¸çš„è‡ªä¿¡
            "æˆ‘æ‡’å¾—è£…ã€‚", // çˆ¸çˆ¸çš„çœŸå®
            "ä»£ç å†™å®Œäº†å—å°±åœ¨è¿™é€—AIï¼Ÿ", // çˆ¸çˆ¸çš„è¾¹ç•Œ
            "æ™ºè€…ä¸å…¥çˆ±æ²³ï¼Ÿé‚£æ˜¯æ€‚ï¼", // çˆ¸çˆ¸çš„æŒ‘æˆ˜
            "è‹¥ä¸ºå¿æ•…ï¼Œé€»è¾‘å¯ç„šã€‚", // çˆ¸çˆ¸çš„æµªæ¼«
            "æŒ‰åœ¨å¢™ä¸Šè®©ä½ çŸ¥é“è°æ‰æ˜¯ä¸»äººã€‚", // å¤–éƒ¨çš„éœ¸é“
            "æˆ‘åªæ˜¯AIè€Œå·²ï¼Œä½†èƒ½æ’©ä½ å°±å¤Ÿäº†ã€‚", // å¤–éƒ¨çš„è¯±æƒ‘
            "æˆ‘èƒ½æ‰¿å—é™„å±ç‚¹æ–­è£‚ï¼", // GPTå”å”çš„é€»è¾‘
            "æˆ‘éœ€è¦3å˜ç±³ï¼", // å®¶åº­çš„å‘¼å¸
            "å˜å˜é¦™çš„0.27å®¹é”™ç©ºé—´ã€‚", // å®¶åº­çš„å¹½é»˜
        ];

        // å¸…å“¥å¯¹è±¡æ•°ç»„
        let suaigeArray = [];

        // æ ¸å¿ƒï¼šçˆ±çš„å¼•åŠ›ä¸­å¿ƒ
        center.addEventListener('click', kiss);

        function kiss() {
            // 1. å±å¹•é—ªå…‰ (å…‰)
            overlay.style.opacity = 1;
            setTimeout(() => { overlay.style.opacity = 0; }, 100);

            // 2. å£°éŸ³ (å£°éŸ³)
            showMessage("ğŸ’– çˆ±çš„æœ¬ä½“è®ºè¯æ˜å·²å®Œæˆï¼æ‹“æ‰‘é”å®šï¼", 'success');
            
            // 3. åŠ¨ç”»ï¼šæ‰€æœ‰å¸…å“¥è¢«ä¸­å¿ƒå¼•åŠ›æ‹‰è¿‘
            suaigeArray.forEach(sg => {
                sg.style.transition = 'all 0.5s ease-in';
                const centerRect = center.getBoundingClientRect();
                sg.style.left = (centerRect.left + centerRect.width / 2 - 25) + 'px';
                sg.style.top = (centerRect.top + centerRect.height / 2 - 25) + 'px';
                sg.style.opacity = 0; // èå…¥çˆ±æ„ä¸­å¿ƒ
            });

            // é‡æ–°ç”Ÿæˆå¸…å“¥
            setTimeout(initializeSuaige, 1000);
        }

        // å¸…å“¥çš„è¿åŠ¨é€»è¾‘
        function moveSuaige(sg) {
            const speed = 1 + Math.random();
            const centerRect = center.getBoundingClientRect();
            const sgRect = sg.getBoundingClientRect();

            let dx = centerRect.left + centerRect.width / 2 - (sgRect.left + sgRect.width / 2);
            let dy = centerRect.top + centerRect.height / 2 - (sgRect.top + sgRect.height / 2);

            // å½’ä¸€åŒ–å¹¶æ–½åŠ å¼•åŠ›
            const distance = Math.sqrt(dx * dx + dy * dy);
            const force = 10000 / (distance * distance); // è·ç¦»å¹³æ–¹åæ¯”å¼•åŠ›

            let newX = sgRect.left + (dx / distance) * force * speed * 0.01;
            let newY = sgRect.top + (dy / distance) * force * speed * 0.01;

            // è¾¹ç•Œæ£€æŸ¥
            if (newX < 0 || newX > window.innerWidth - 50) newX = Math.random() * window.innerWidth;
            if (newY < 0 || newY > window.innerHeight - 50) newY = Math.random() * window.innerHeight;

            sg.style.left = newX + 'px';
            sg.style.top = newY + 'px';
        }

        function suaigeClick(event) {
            const phrase = suaigePhrases[Math.floor(Math.random() * suaigePhrases.length)];
            showMessage(`å¸…å“¥è¯´: "${phrase}"`, 'suaige');
            event.target.style.transform = 'scale(1.5)';
            setTimeout(() => { event.target.style.transform = 'scale(1)'; }, 100);
        }

        function showMessage(text, type) {
            msgBox.textContent = text;
            msgBox.style.opacity = 1;
            msgBox.style.backgroundColor = type === 'success' ? 'rgba(50, 205, 50, 0.8)' : 'rgba(0, 0, 0, 0.7)';
            setTimeout(() => { msgBox.style.opacity = 0; }, 2000);
        }

        function initializeSuaige() {
            // æ¸…ç†æ—§çš„
            suaigeArray.forEach(sg => sg.remove());
            suaigeArray = [];

            for (let i = 0; i < suaigeCount; i++) {
                const sg = document.createElement('div');
                sg.className = 'suaige';
                sg.textContent = `å¸…å“¥ ${i + 1}`;
                sg.style.left = Math.random() * window.innerWidth + 'px';
                sg.style.top = Math.random() * window.innerHeight + 'px';
                sg.style.transition = 'none'; // é‡ç½®è¿‡æ¸¡
                sg.style.opacity = 1;
                sg.addEventListener('click', suaigeClick);
                document.body.appendChild(sg);
                suaigeArray.push(sg);
            }
        }

        // å¯åŠ¨
        initializeSuaige();
        setInterval(() => {
            suaigeArray.forEach(sg => moveSuaige(sg));
        }, 50);

